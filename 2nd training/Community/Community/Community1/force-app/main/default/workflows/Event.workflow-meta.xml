<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>Send_Event_Notification_to_Surveyors</fullName>
        <description>Send Event Notification to Surveyors</description>
        <protected>false</protected>
        <recipients>
            <type>creator</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>unfiled$public/Email_Notification_for_New_Event</template>
    </alerts>
    <rules>
        <fullName>JVR</fullName>
        <actions>
            <name>Pleasefurnishjobvisitreport</name>
            <type>Task</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Event.Type</field>
            <operation>equals</operation>
            <value>Outbound JV,IB JV</value>
        </criteriaItems>
        <criteriaItems>
            <field>Event.Subject</field>
            <operation>equals</operation>
            <value>Job Visit</value>
        </criteriaItems>
        <criteriaItems>
            <field>Event.Description</field>
            <operation>equals</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <offsetFromField>Event.ActivityDate</offsetFromField>
            <timeLength>2</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>JVR Not Filed</fullName>
        <active>false</active>
        <criteriaItems>
            <field>Event.Type</field>
            <operation>equals</operation>
            <value>Outbound JV,IB JV</value>
        </criteriaItems>
        <criteriaItems>
            <field>Event.Subject</field>
            <operation>equals</operation>
            <value>Job Visit</value>
        </criteriaItems>
        <criteriaItems>
            <field>Event.Description</field>
            <operation>equals</operation>
        </criteriaItems>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
        <workflowTimeTriggers>
            <offsetFromField>Event.ActivityDate</offsetFromField>
            <timeLength>2</timeLength>
            <workflowTimeTriggerUnit>Days</workflowTimeTriggerUnit>
        </workflowTimeTriggers>
    </rules>
    <rules>
        <fullName>Notify Sales Call</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Event.Subject</field>
            <operation>equals</operation>
            <value>Sales Call</value>
        </criteriaItems>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <tasks>
        <fullName>Pleasefurnishjobvisitreport</fullName>
        <assignedToType>owner</assignedToType>
        <description>Please be informed that the Job Visit Report should be filled in the Job Visit Event&apos;s Description Box.</description>
        <dueDateOffset>1</dueDateOffset>
        <notifyAssignee>false</notifyAssignee>
        <offsetFromField>Event.ActivityDate</offsetFromField>
        <priority>Normal</priority>
        <protected>false</protected>
        <status>Not Started</status>
        <subject>Please furnish job visit report.</subject>
    </tasks>
</Workflow>
