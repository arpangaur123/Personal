    <rules>
        <fullName>Case Close %28Demerit%29</fullName>
        <actions>
            <name>Case_Origin</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Case_Reason_Merit</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Case_Subject</name>
            <type>FieldUpdate</type>
        </actions>
        <actions>
            <name>Close_Merit_Case</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <criteriaItems>
            <field>Case.CaseNumber</field>
            <operation>notEqual</operation>
        </criteriaItems>
        <criteriaItems>
            <field>Case.RecordTypeId</field>
            <operation>equals</operation>
            <value>Merit/Demerit</value>
        </criteriaItems>
        <criteriaItems>
            <field>Case.Reason__c</field>
            <operation>notEqual</operation>
            <value>Merit</value>
        </criteriaItems>
        <description>Auto close case on save, bypass Close case page and auto field update.</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
