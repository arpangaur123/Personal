<?xml version="1.0" encoding="UTF-8"?>
<Workflow xmlns="http://soap.sforce.com/2006/04/metadata">
    <alerts>
        <fullName>AlertAccountActivity</fullName>
        <description>Alert Account Activity</description>
        <protected>false</protected>
        <recipients>
            <recipient>dickchia@helutrans.com.sg</recipient>
            <type>user</type>
        </recipients>
        <senderType>CurrentUser</senderType>
        <template>Internalmailtemplates/AccountActivity</template>
    </alerts>
    <fieldUpdates>
        <fullName>ARTIM_ICEFAT_terms</fullName>
        <field>Terms__c</field>
        <literalValue>30 Days</literalValue>
        <name>ARTIM ICEFAT terms</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <fieldUpdates>
        <fullName>artAppE2__Create_as_Collector</fullName>
        <field>artAppE2__Create_as_Collector__c</field>
        <literalValue>1</literalValue>
        <name>Create as Collector</name>
        <notifyAssignee>false</notifyAssignee>
        <operation>Literal</operation>
        <protected>false</protected>
        <reevaluateOnChange>false</reevaluateOnChange>
    </fieldUpdates>
    <rules>
        <fullName>30Day Term Update</fullName>
        <actions>
            <name>ARTIM_ICEFAT_terms</name>
            <type>FieldUpdate</type>
        </actions>
        <active>true</active>
        <booleanFilter>1 or 2</booleanFilter>
        <criteriaItems>
            <field>Account.ARTIM__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <criteriaItems>
            <field>Account.ICEFAT__c</field>
            <operation>equals</operation>
            <value>True</value>
        </criteriaItems>
        <description>update term to 30day if Icefat or Artim</description>
        <triggerType>onCreateOrTriggeringUpdate</triggerType>
    </rules>
    <rules>
        <fullName>Account Activity</fullName>
        <actions>
            <name>AlertAccountActivity</name>
            <type>Alert</type>
        </actions>
        <active>false</active>
        <booleanFilter>1</booleanFilter>
        <criteriaItems>
            <field>Account.Name</field>
            <operation>contains</operation>
        </criteriaItems>
        <description>Account Activity</description>
        <triggerType>onAllChanges</triggerType>
    </rules>
    <rules>
        <fullName>New Prospect</fullName>
        <active>true</active>
        <criteriaItems>
            <field>Account.Name</field>
            <operation>contains</operation>
        </criteriaItems>
        <description>Potential new prospect</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
    <rules>
        <fullName>artAppE2__Create as Collector</fullName>
        <actions>
            <name>artAppE2__Create_as_Collector</name>
            <type>FieldUpdate</type>
        </actions>
        <active>false</active>
        <criteriaItems>
            <field>Account.artAppE2__Create_as_Collector__c</field>
            <operation>equals</operation>
            <value>False</value>
        </criteriaItems>
        <description>Activate if you want all accounts created as collectors</description>
        <triggerType>onCreateOnly</triggerType>
    </rules>
</Workflow>
