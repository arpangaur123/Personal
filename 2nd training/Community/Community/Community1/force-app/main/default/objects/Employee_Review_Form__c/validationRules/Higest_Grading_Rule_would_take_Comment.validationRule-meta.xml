<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Higest_Grading_Rule_would_take_Comment</fullName>
    <active>true</active>
    <errorConditionFormula>AND(
ISPICKVAL(Company_Knowledge__c , &quot;5&quot;),
ISBLANK( Supervisor_Comment_for_Company_Knowledge__c )
)</errorConditionFormula>
    <errorDisplayField>Supervisor_Comment_for_Company_Knowledge__c</errorDisplayField>
    <errorMessage>Please indicate a reason to justify for the 5 points awarded.</errorMessage>
</ValidationRule>
