<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Comment_Validation_highest_grade</fullName>
    <active>true</active>
    <description>Comment_Validation_highest_grade</description>
    <errorConditionFormula>AND(
ISPICKVAL( Materials__c  , &quot;5&quot;),
ISBLANK(  Comment_from_Supervisor1_for_the_Company__c )
)</errorConditionFormula>
    <errorDisplayField>Comment_from_Supervisor1_for_the_Company__c</errorDisplayField>
    <errorMessage>Please indicate a reason to justify for the 5 points awarded.</errorMessage>
</ValidationRule>
