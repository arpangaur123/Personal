<?xml version="1.0" encoding="UTF-8"?>
<ApprovalProcess xmlns="http://soap.sforce.com/2006/04/metadata">
    <active>false</active>
    <allowRecall>true</allowRecall>
    <allowedSubmitters>
        <type>owner</type>
    </allowedSubmitters>
    <approvalPageFields>
        <field>Name</field>
        <field>Category__c</field>
        <field>Level_of_Proficiency__c</field>
        <field>Overall_Overall_Score_100__c</field>
        <field>Overall_Performance_Rating__c</field>
        <field>Overall_Weightage_Overall_Score_100__c</field>
        <field>Owner</field>
        <field>OverallWtagePart1_BasicKnowledge_Wt_15__c</field>
        <field>OverallWtagePart2_TechnSkills_Wtge_30__c</field>
    </approvalPageFields>
    <approvalStep>
        <allowDelegate>false</allowDelegate>
        <approvalActions>
            <action>
                <name>EFR_approval_email_alert_to_CEO</name>
                <type>Alert</type>
            </action>
            <action>
                <name>Updated_Approval_Status</name>
                <type>FieldUpdate</type>
            </action>
        </approvalActions>
        <assignedApprover>
            <approver>
                <name>caroline@helutrans.com</name>
                <type>user</type>
            </approver>
            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>GM/CFO -Approval Step</description>
        <entryCriteria>
            <booleanFilter>1 OR 2 OR 3 OR 4</booleanFilter>
            <criteriaItems>
                <field>Employee_Review_Form__c.Category__c</field>
                <operation>equals</operation>
                <value>Crew</value>
            </criteriaItems>
            <criteriaItems>
                <field>Employee_Review_Form__c.Category__c</field>
                <operation>equals</operation>
                <value>Driver</value>
            </criteriaItems>
            <criteriaItems>
                <field>Employee_Review_Form__c.Category__c</field>
                <operation>equals</operation>
                <value>Carpenter</value>
            </criteriaItems>
            <criteriaItems>
                <field>Employee_Review_Form__c.Category__c</field>
                <operation>equals</operation>
                <value>Team Leader</value>
            </criteriaItems>
        </entryCriteria>
        <ifCriteriaNotMet>ApproveRecord</ifCriteriaNotMet>
        <label>GM/CFO -Approval Step</label>
        <name>GM_CFO_Approval_Step</name>
    </approvalStep>
    <emailTemplate>unfiled$public/GM_CFO_Notification_to_First_Approver</emailTemplate>
    <enableMobileDeviceAccess>true</enableMobileDeviceAccess>
    <finalApprovalActions>
        <action>
            <name>EFR_Final_approval_email_notificnations</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update_Final_Approval_Status</name>
            <type>FieldUpdate</type>
        </action>
    </finalApprovalActions>
    <finalApprovalRecordLock>true</finalApprovalRecordLock>
    <finalRejectionActions>
        <action>
            <name>EFR_Rejection_email_notification</name>
            <type>Alert</type>
        </action>
        <action>
            <name>Update</name>
            <type>FieldUpdate</type>
        </action>
    </finalRejectionActions>
    <finalRejectionRecordLock>false</finalRejectionRecordLock>
    <initialSubmissionActions>
        <action>
            <name>Update_status_for_pending</name>
            <type>FieldUpdate</type>
        </action>
    </initialSubmissionActions>
    <label>EFR Approval process</label>
    <processOrder>1</processOrder>
    <recallActions>
        <action>
            <name>Update_recall_status</name>
            <type>FieldUpdate</type>
        </action>
    </recallActions>
    <recordEditability>AdminOnly</recordEditability>
    <showApprovalHistory>true</showApprovalHistory>
</ApprovalProcess>
